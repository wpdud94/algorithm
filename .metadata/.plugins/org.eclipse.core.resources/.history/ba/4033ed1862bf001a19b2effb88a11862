package instructors;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;
import java.util.Scanner;

public class Algo02_CutSection {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		// 1. 영역 구성
		// 1-1. 가로 세로 받기
		int width = sc.nextInt();
		int height = sc.nextInt();
		// 2. 가로 세로 별 구분 데이터 추출
		// 2-1. 구분선 개수 받기
		int numOfCut = sc.nextInt();
		// 2-2. 구분선 모두 받기
		int[]lineArr = new int[numOfCut*2];
		int numOfWline = 0;
		int numOfHline = 0;
		for(int i=0;i<lineArr.length;i++) {
			 lineArr[i] = sc.nextInt();
		}
		// 2-3. 0면 가로 구분선 배열에 , 1이면 세로 구분선 배열에 할당... 기본 0 할당 & 한계선 할당
		ArrayList<Integer> hLine = new ArrayList<>();
		ArrayList<Integer> wLine = new ArrayList<>();
		wLine.add(0); hLine.add(0);
		for(int i=0;i<lineArr.length;i=i+2) {
			if(lineArr[i]==0) wLine.add(lineArr[i+1]);
			else hLine.add(lineArr[i+1]);
		}
		wLine.add(width); hLine.add(height);
		Collections.sort(wLine);
		Collections.sort(hLine);
		System.out.println("세로구분선 : " + wLine);
		System.out.println("가로구분선 : " +hLine);
		
		
		
	}
}
/*
10 8
3
0 3
1 4
0 2
*/