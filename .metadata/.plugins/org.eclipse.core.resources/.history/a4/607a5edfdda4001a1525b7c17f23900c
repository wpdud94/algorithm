package week1;

import java.util.Arrays;

public class AT28 {

	public static void main(String[] args) {
		Solution28 s = new Solution28();
		int n=5;
		int[] lost = {2,4};
		int[] reserve = {3,5};
		System.out.println(s.solution(n, lost, reserve));



	}

}
class Solution28 {
	public int solution(int n, int[] lost, int[] reserve) {
        int answer = n-lost.length;
        //1. 작은 애들 먼저 빌려주기
        for(int i : lost) {
        	for(int j : reserve) {
        		if(i==j-1) {
        			i=0;
        			answer++;
        		}
        	}
        }
        System.out.println(Arrays.toString(lost));
        //2. 큰 애들 먼저 빌려주기
        return answer;
    }
}
 
